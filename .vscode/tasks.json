{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run",
      "type": "shell",
      "command": "python",
      "args": [
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "run with input and output",
      "type": "shell",
      "command": "python ${file} <input.txt> output.txt",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
